<!DOCTYPE html>
<html>
<head>
  <title>Player Panel - Killer Game</title>
  <style>
    body { font-family: Arial; padding: 10px; background: #f4f4f4; }
    button { padding: 10px; margin: 5px; }
    #status { background: white; padding: 10px; border-radius: 8px; margin-top: 10px; }
  </style>
</head>
<body>
  <h2>🧑‍🚀 Player Panel</h2>
  <div id="info">Connecting...</div>
  <div id="status"></div>
  <button id="markDead" onclick="markDead()">Mark Dead</button>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    socket.emit("joinAsPlayer", token);

    socket.on("playerInfo", (data) => {
      document.getElementById('info').innerText = `Welcome ${data.name}`;
    });

    socket.on("broadcast", msg => {
      const div = document.createElement('div');
      div.innerText = msg;
      document.body.appendChild(div);
    });

    function markDead() {
      socket.emit("markDead", token);
    }
  </script>
</body>
</html>
